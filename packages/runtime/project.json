{
  "name": "reconciler",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/reconciler/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "command": "rm -rf esm && babel ./src --out-dir esm --extensions .ts,.tsx,.js,.jsx --copy-files --no-copy-ignored"
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --maxWorkers=75%",
        "cwd": "{projectRoot}"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "dev",
      "configurations": {
        "dev": {
          "commands": [
            "tsc --build ./tsconfig.dev.json --pretty --verbose",
            "prettier ./dts --write --loglevel warn"
          ],
          "parallel": false
        },
        "prod": {
          "commands": [
            "tsc --build ./tsconfig.prod.json --pretty --verbose",
            "prettier ./dts --write --loglevel warn"
          ],
          "parallel": false
        }
      }
    }
  }
}